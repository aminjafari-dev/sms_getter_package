<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- SMS Permission - Required to read SMS messages from the device -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <!-- Optional: Permission to read contacts (useful for displaying contact names) -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- Permission for internet access (if needed for future features) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permission for network state (useful for connectivity checks) -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
